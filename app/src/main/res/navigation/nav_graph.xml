<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/JotNote">

    <fragment
        android:id="@+id/JotNote"
        android:name="com.example.jotnote.ui.JotNote"
        android:label="Jot Note"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_JotNote_to_todoFragment"
            app:destination="@id/todoFragment" />
    </fragment>
    <fragment
        android:id="@+id/todoFragment"
        android:name="com.example.jotnote.TodoFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_todo" >
        <argument
            android:name="todoType"
            app:argType="string"
             />
    </fragment>
</navigation>