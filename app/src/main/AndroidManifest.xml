<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jotnote">

    <application
        android:name=".di.TaskApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JotNote">
        <activity
            android:name=".presentation.view.SplashScreen"
            android:exported="true"
            android:label="@string/app_name_splash"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".presentation.view.MainActivity"
            android:exported="true"
            android:label="@string/app_name_splash"
            android:theme="@style/Theme.JotNote.NoActionBar">
        </activity>
    </application>

</manifest>